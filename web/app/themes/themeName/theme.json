{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 2,
	"settings": {
		"appearanceTools": true,
		"color": {
			"defaultPalette": false,
			"palette": [
				{
					"color": "#000000",
					"name": "Dark",
					"slug": "dark"
				},
				{
					"color": "#ffffff",
					"name": "Light",
					"slug": "light"
				},
				{
					"color": "#014384",
					"name": "Primary",
					"slug": "primary"
				},
				{
					"color": "#44bbd8",
					"name": "Secondary",
					"slug": "secondary"
				},
				{
					"color": "#3c7ea1",
					"name": "Color 1",
					"slug": "color-1"
				},
				{
					"color": "#ed4f33",
					"name": "Color 2",
					"slug": "color-2"
				},
				{
					"color": "#fcb516",
					"name": "Color 3",
					"slug": "color-3"
				},
				{
					"color": "#00a598",
					"name": "Color 4",
					"slug": "color-4"
				},
				{
					"color": "#F6F6F6",
					"name": "Background",
					"slug": "color-bg"
				}
			]
		},
		"layout": {
			"contentSize": "650px",
			"wideSize": "1210px"
		},
		"spacing": {
			"spacingScale": {
				"steps": 0
			},
			"spacingSizes": [
				{
					"size": "1.875rem",
					"slug": "small",
					"name": "1"
				},
				{
					"size": "4.375rem",
					"slug": "medium",
					"name": "2"
				},
				{
					"size": "7.5rem",
					"slug": "large",
					"name": "3"
				}
			],
			"units": [
				"%",
				"px",
				"em",
				"rem",
				"vh",
				"vw"
			]
		},
		"typography": {
			"dropCap": false,
			"fontFamilies": [
				{
					"fontFamily": "Arial, sans-serif",
					"name": "Base Font",
					"slug": "base-font"
				}
			],
			"fontSizes": [
				{
					"size": "0.875rem",
					"slug": "small"
				},
				{
					"size": "1.25rem",
					"slug": "medium"
				},
				{
					"size": "1.75rem",
					"slug": "large"
				}
			]
		},
		"custom": {
			"lineHeight": {
				"body": 1.5
			},
			"mediaSpacing": "1.25rem"
		},
		"useRootPaddingAwareAlignments": true
	},
	"styles": {
		"color": {
			"background": "var(--wp--preset--color--light)",
			"text": "var(--wp--preset--color--dark)"
		},
		"elements": {
			"h1": {
				"spacing": {
					"margin": {
						"bottom": "1.4rem"
					}
				},
				"typography": {
					"fontSize": "2.5rem"
				}
			},
			"h2": {
				"spacing": {
					"margin": {
						"bottom": "1.2rem"
					}
				},
				"typography": {
					"fontSize": "2.2rem"
				}
			},
			"h3": {
				"typography": {
					"fontSize": "2rem"
				}
			},
			"h4": {
				"typography": {
					"fontSize": "1.8rem"
				}
			},
			"h5": {
				"typography": {
					"fontSize": "1.6rem"
				}
			},
			"h6": {
				"typography": {
					"fontSize": "1.4rem"
				}
			},
			"heading": {
				"spacing": {
					"margin": {
						"top": "0",
						"bottom": "1rem"
					}
				},
				"typography": {
					"fontWeight": "700",
					"lineHeight": "var(--wp--custom--line-height--body)"
				}
			},
			"link": {
				"color": {
					"text": "var(--wp--preset--color--primary)"
				},
				":hover": {
					"color": {
						"text": "var(--wp--preset--color--dark)"
					}

				},
				":focus": {
					"color": {
						"text": "var(--wp--preset--color--dark)"
					}
				},
				"typography": {
					"textDecoration": "underline",
					"fontWeight": "400"
				}
			}
		},
		"spacing": {
			"blockGap": "1.5rem",
			"padding": {
				"top": "var(--wp--preset--spacing--small)",
				"right": "var(--wp--preset--spacing--small)",
				"bottom": "var(--wp--preset--spacing--small)",
				"left": "var(--wp--preset--spacing--small)"
			}
		},
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--base-font)",
			"fontSize": "0.875rem",
			"lineHeight": "var(--wp--custom--line-height--body)",
			"fontWeight": "400"
		},
		"blocks": {
            "core/paragraph": {
                "spacing": {
					"margin": {
						"top": "0",
						"bottom": "0.875rem"
					}
				}
            },
			"core/list": {
                "spacing": {
					"margin": {
						"top": "0",
						"bottom": "0.875rem"
					}
				}
            },
			"core/image": {
                "spacing": {
					"margin": {
						"top": "0",
						"bottom": "var(--wp--custom--media-spacing)"
					}
				}
            }
        }
	}
}
